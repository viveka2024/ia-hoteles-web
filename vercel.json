{
  "version": 2,
  "builds": [
    // Esto empareja todos los .js dentro de api/
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    // Redirige /api/loquesea al JS correspondiente
    { "src": "/api/(.*)", "dest": "api/$1.js" },
    // Tus rutas est√°ticas
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
